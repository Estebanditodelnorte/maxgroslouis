---
import Layout from '../layouts/Layout.astro';

const gatherings = [
  {
    title: 'Heritage Documentation Workshop – with La Boîte Rouge VIF',
    date: 'January 26, 2026',
    time: '6:00 p.m. – 10:00 p.m.',
    description:
      'Hands-on workshop introducing participants to the museum’s documentation process: inventorying, photographing, and describing artifacts from the collection using professional tools and cultural protocols. Open to students, young researchers, and Wendake residents.',
    image: '/images/webp/council-circle.webp',
  },
  {
    title: 'Pilot Exhibition Preview',
    date: 'February 12, 2026',
    time: '2:00 p.m. – 4:30 p.m.',
    description:
      'Exclusive preview of the museum’s first exhibition phase, featuring key objects from the Max Gros-Louis collection, community testimonies, and new digital installations developed with La Boîte Rouge VIF.',
    image: '/images/webp/community-speaker.webp',
  },
  {
    title: 'Ongoing Activities',
    date: 'Ongoing',
    time: '',
    description:
      'Throughout the year, the museum team organizes activities in collaboration with cultural and educational partners:<br /><br />Heritage documentation sessions with volunteers and students<br />Community consultations with the Circle of Elders<br />Oral history interviews for the digital archive<br />Outreach visits to schools and partner institutions<br /><br />Follow updates on <a href="https://www.maxgroslouis.com" target="_blank" rel="noreferrer">www.maxgroslouis.com</a> and our <a href="https://www.facebook.com/profile.php?id=61581850003312" target="_blank" rel="noreferrer">social channels</a> to participate.',
    image: '/images/webp/community-collection.webp',
  },
];

---

<Layout title="Events | Max Gros-Louis Museum">
  <section class="events-hero glass-panel">
    <div>
      <p class="eyebrow">Gather Together</p>
      <h1>Programming rooted in story, ceremony, and joy.</h1>
      <p>
        Events are co-created with Elders, artists, and knowledge keepers, offering moments of reflection, dialogue, and learning.
      </p>
    </div>
    <img src="/images/webp/forest-installation.webp" alt="Gallery installation with carved figures and painted wings" loading="lazy" />
  </section>

  <section class="gathering-grid">
    {gatherings.map((event) => (
      <article class="gathering glass-panel">
        <img src={event.image} alt={event.title} loading="lazy" />
        <div>
          <h2>{event.title}</h2>
          <p class="datetime">
            {event.date}
            {event.time ? ` · ${event.time}` : ''}
          </p>
          <p set:html={event.description}></p>
          <a class="btn ghost" href="/contact">Join the waitlist</a>
        </div>
      </article>
    ))}
  </section>

  <section class="weekly glass-panel">
    <div class="section-heading">
      <p class="eyebrow">Stay Connected</p>
      <h2>
        Subscribe to our newsletter or
        <a href="https://www.facebook.com/profile.php?id=61581850003312" target="_blank" rel="noreferrer" style="text-decoration: underline;">follow us on social media</a>
        for upcoming events, workshops, and exhibition milestones.
      </h2>
    </div>
    <ul>
      <li><a href="mailto:info@maxgroslouis.com">info@maxgroslouis.com</a></li>
    </ul>
  </section>
</Layout>

<style>
  section {
    margin-top: clamp(2rem, 6vw, 4rem);
  }

  .events-hero {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: clamp(1.5rem, 5vw, 4rem);
    align-items: center;
  }

  .events-hero img {
    width: 100%;
    border-radius: 1.25rem;
    object-fit: cover;
    max-height: 420px;
  }

  .gathering-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.5rem;
  }

  .gathering {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .gathering img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-radius: 1rem;
  }

  .datetime {
    text-transform: uppercase;
    letter-spacing: 0.25em;
    font-size: 0.75rem;
    color: var(--global-accent-alt-color);
  }

  .weekly ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
</style>
