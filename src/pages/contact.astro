---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact | Max Gros-Louis Museum">
  <section class="contact-hero glass-panel">
    <div>
      <p class="eyebrow">Stay in Touch</p>
      <h1>Reach out to plan a visit, propose programming, or share a story.</h1>
      <p>
        We respond within 2 business days at <a href="mailto:info@maxgroslouis.com">info@maxgroslouis.com</a>. For urgent requests, call <a href="tel:+18197909855">819-790-9855</a> between 10 a.m. and 6 p.m. EST.
      </p>
      <p class="contact-line">
        <strong>Email</strong><br />
        <a href="mailto:info@maxgroslouis.com">info@maxgroslouis.com</a>
      </p>
    </div>
    <img src="/images/webp/community-speaker.webp" alt="Community member speaking into a microphone during a circle" loading="lazy" />
  </section>

  <section class="form-section glass-panel">
    <form netlify>
      <div class="field">
        <label for="name">Name</label>
        <input id="name" name="name" type="text" placeholder="Your name" required />
      </div>
      <div class="field">
        <label for="email">Email</label>
        <input id="email" name="email" type="email" placeholder="you@example.com" required />
      </div>
      <div class="field">
        <label for="topic">Topic</label>
        <select id="topic" name="topic">
          <option>Plan a visit</option>
          <option>Loan or partnership</option>
          <option>Media request</option>
          <option>Share a story</option>
        </select>
      </div>
      <div class="field">
        <label for="message">Message</label>
        <textarea id="message" name="message" rows="5" placeholder="How can we help?" required></textarea>
      </div>
      <button class="btn primary" type="submit">Send Message</button>
    </form>
  </section>
</Layout>

<style>
  section {
    margin-top: clamp(2rem, 6vw, 4rem);
  }

  .contact-hero {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: clamp(1.5rem, 5vw, 4rem);
    align-items: center;
  }

  .contact-hero img {
    width: 100%;
    border-radius: 1.25rem;
    object-fit: cover;
  }

  .contact-line {
    margin-top: 1rem;
    color: color-mix(in srgb, var(--global-base-t-color) 85%, var(--global-base-b-alt-color));
  }

  form {
    display: grid;
    gap: 1rem;
  }

  .field {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  input,
  select,
  textarea {
    border-radius: 0.75rem;
    border: 1px solid var(--global-border-alt-color);
    background: rgba(5, 15, 9, 0.4);
    color: var(--global-base-t-color);
    padding: 0.85rem 1rem;
    font-size: 1rem;
    font-family: var(--global-body-font);
  }

  input:focus,
  select:focus,
  textarea:focus {
    outline: 2px solid var(--global-accent-color);
    border-color: var(--global-accent-color);
  }
</style>
